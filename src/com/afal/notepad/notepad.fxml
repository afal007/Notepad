<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.121" fx:controller="com.afal.notepad.NotepadController">
    <MenuBar fx:id="menuBar">
        <Menu text="File">
            <MenuItem text="New" onAction="#handleNewActionEvent"/>
            <MenuItem text="Open..." />
            <MenuItem text="Save" />
            <MenuItem text="Save as..." />
            <SeparatorMenuItem />
            <MenuItem text="Exit" />
        </Menu>
        <Menu text="Edit">
            <MenuItem text="Copy" />
            <MenuItem text="Cut" />
            <MenuItem text="Paste" />
        </Menu>
        <Menu text="Help">
            <MenuItem text="About" />
        </Menu>
    </MenuBar>

    <TextArea fx:id="textArea" onKeyPressed="#setWasChanged" VBox.vgrow="ALWAYS" />
</VBox>
